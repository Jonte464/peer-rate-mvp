{
  "manifest_version": 3,
  "name": "PeerRate – Verified Deal Trigger (MVP)",
  "version": "0.2.0",
  "description": "Skickar verifierad affärsinfo från plattformar (börjar med Tradera) till PeerRate.",
  "action": {
    "default_title": "PeerRate",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://tradera.com/*",
    "https://www.tradera.com/*",
    "https://tradera.se/*",
    "https://www.tradera.se/*",
    "https://peerrate.ai/*",
    "https://www.peerrate.ai/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tradera.com/*",
        "https://www.tradera.com/*",
        "https://tradera.se/*",
        "https://www.tradera.se/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
